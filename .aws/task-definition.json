{
  "family": "devops-test-app",
  "networkMode": "awsvpc",
  "requiresCompatibilities": [
      "FARGATE"
  ],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::YOUR_ACCOUNT_ID:role/ecsTaskExecutionRole",
  "containerDefinitions": [
      {
          "name": "devops-app",
          "image": "PLACEHOLDER_IMAGE_URL",
          "portMappings": [
              {
                  "containerPort": 3000,
                  "hostPort": 3000,
                  "protocol": "tcp"
              }
          ],
          "essential": true,
          "logConfiguration": {
              "logDriver": "awslogs",
              "options": {
                  "awslogs-group": "/ecs/devops-test-app",
                  "awslogs-region": "ap-southeast-1",
                  "awslogs-stream-prefix": "ecs"
              }
          }
      }
  ]
}